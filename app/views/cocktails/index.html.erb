<div class="container text-center" style="margin-top: 100px">
  <div class="row justify-content-center">
    <div class="col-md-3 col-lg-3">
      <% @cocktails.each do |cocktail| %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('<%= cl_image_path cocktail.photo %>')">
          <h2><%= cocktail.name %></h2>
          <%= link_to "See more", cocktail_path(cocktail), class: 'card-link nav-add-btn' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
