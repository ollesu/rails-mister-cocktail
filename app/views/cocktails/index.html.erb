<div class="container" style="margin-top: 100px">
  <% @cocktails.each do |cocktail| %>
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('<%= cl_image_path cocktail.photo %>')">
        <h2><%= cocktail.name %></h2>
        <%= link_to "See more", cocktail_path(cocktail), class: 'card-link nav-add-btn' %>
      </div>
    </div>
  </div>
  <% end %>
</div>
